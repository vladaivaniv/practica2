k -->\n      <div v-if=\"successMessage\" class=\"success-message\">\n        <p>üéâ Has triat correctament! üéâ</p>\n      </div>\n      <div v-if=\"errorMessage\" class=\"error-message\">\n        <p>‚ùå Opci√≥ incorrecta. Torna-ho a provar.</p>\n      </div>\n      <b-button variant=\"primary\" href=\"/cognitiva\" class=\"next-button\">\n        Anar al seg√ºent exemple de Discapacitat Cognitiva\n      </b-button>\n    </div>\n  </div>\n</template>\n\n<script>\nexport default {\n  name: \"Cognitiva\",\n  data() {\n    return {\n      successMessage: false, // Mostra un missatge d'√®xit\n      errorMessage: false, // Mostra un missatge d'error\n    };\n  },\n  methods: {\n    correctChoice() {\n      this.successMessage = true;\n      this.errorMessage = false;\n      setTimeout(() => {\n        this.successMessage = false;\n      }, 3000); // Missatge d'√®xit durant 3 segons\n    },\n    wrongChoice() {\n      this.errorMessage = true;\n      this.successMessage = false;\n      setTimeout(() => {\n        this.errorMessage = false;\n      }, 3000); // Missatge d'error durant 3 segons\n    },\n    navigateHome() {\n      window.location.href = \"/\"; // Navegar a l'inici\n    },\n  },\n};\n</script>\n\n<style>\n/* Contenidor principal */\n.cognitiva {\n  height: 100vh;\n  width: 100vw;\n  background-color: #f5f5f5;\n  display: flex;\n  justify-content: center;\n  align-items: center;\n  padding: 20px;\n}\n\n/* Contenidor central */\n.content-container {\n  text-align: center;\n  color: #333;\n  padding: 20px;\n  border: 2px solid #ccc;\n  border-radius: 10px;\n  background-color: rgba(255, 255, 255, 0.9);\n}\n\n/* Text explicatiu */\n.explanation {\n  font-size: 1.5rem;\n  margin-bottom: 20px;\n  color: #444;\n}\n\n/* Botons amb etiquetes confuses */\n.buttons-container {\n  display: flex;\n  flex-wrap: wrap;\n  gap: 10px;\n  justify-content: center;\n}\n\n.confusing-button {\n  font-size: 1rem;\n  background-color: #6c757d;\n  color: white;\n  border: none;\n  padding: 10px 20px;\n  cursor: pointer;\n  border-radius: 5px;\n  transition: all 0.3s ease;\n}\n\n.confusing-button:hover {\n  background-color: #5a6268;\n}\n\n/* Missatge d'√®xit */\n.success-message {\n  margin-top: 20px;\n  padding: 10px;\n  border: 2px solid #28a745;\n  background-color: #e6ffe6;\n  color: #28a745;\n  font-size: 1.2rem;\n  font-weight: bold;\n  border-radius: 5px;\n}\n\n/* Missatge d'error */\n.error-message {\n  margin-top: 20px;\n  padding: 10px;\n  border: 2px solid #dc3545;\n  background-color: #ffe6e6;\n  color: #dc3545;\n  font-size: 1.2rem;\n  font-weight: bold;\n  border-radius: 5px;\n}\n\n/* Bot√≥ seg√ºent */\n.next-button {\n  margin-top: 20px;\n  font-size: 1rem;\n  padding: 10px 20px;\n  background-color: #007bff;\n  color: white;\n  border: none;\n  border-radius: 5px;\n  cursor: pointer;\n  transition: all 0.3s ease;\n}\n\n.next-button:hover {\n  background-color: #0056b3;\n}\n</style>\n"]}]}